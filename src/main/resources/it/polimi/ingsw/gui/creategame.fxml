     <Label fx:id="joinRandomLabel"  text="join random game" />
     <Button fx:id="joinDefaultButton"  mnemonicParsing="false" onAction="#joinDefault" text="join" />
     <AnchorPane fx:id="space3"></AnchorPane>
     <Label fx:id="selectGameToJoinLabel"  text="select game to join" />
     <Label fx:id="gameIDLabel" text="gameID" />
     <TextField fx:id="gameIDTextfield"  />
     <Button fx:id="joinCustomButton"  mnemonicParsing="false" onAction="#joinCustom" text="join" />
