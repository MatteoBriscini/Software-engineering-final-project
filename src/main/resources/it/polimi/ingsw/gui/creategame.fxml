 <VBox fx:id="createDiv" alignment="CENTER" prefHeight="226.0" layoutX="10" prefWidth="620.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
