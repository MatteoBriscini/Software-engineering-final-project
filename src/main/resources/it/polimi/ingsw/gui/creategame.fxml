 <VBox fx:id="loginDiv" alignment="CENTER" prefHeight="226.0" layoutX="650.0" prefWidth="620.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
     <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
     </padding>
      <Label fx:id="joinLabel" alignment="CENTER"  layoutY="60.0" prefHeight="47.0" prefWidth="400.0" text="join game">
